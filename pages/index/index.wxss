/* pages/index/index.wxss */
page{
    background: #f5f5f5;
}
.top-part{
    background: #fff;
    position: fixed;
    top:0;
    left: 0;
    right: 0;
}
.search-bar{
    background: #f5f5f5;
}
.v-carousel{
    margin-top: 90rpx;
    background: #fff;
}
.skip{
    display: flex;
    background: #fff;
    width:100%;
    margin:0rpx 0rpx;
    justify-content: center;
    margin-top: 20rpx;
}
.skip .box{
    width:50%;
    padding:10rpx 10rpx;
}
.skip .box image{
    width:90rpx;
    height:90rpx;
    display:block;
    margin:0 auto;    
}
.skip .box text{
    font-size:27rpx;
    text-align:center;
    display:block;
    line-height:40rpx;
    margin-top:15rpx;      
}
.course-content{
    width: 100%;
    display: flex;
    flex-direction: column;
}
v-videobox{
    margin-top: 15rpx;
}