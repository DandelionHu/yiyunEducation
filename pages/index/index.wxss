/* pages/index/index.wxss */
page{
    background: #f5f5f5;
}
.header{
    position: fixed;
    background: #fff;
    height: 100rpx;
    width: 100%;
    border-top: 1rpx solid #f5f5f5;
    border-bottom: 1rpx solid #f5f5f5;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    z-index: 99
}
.header .box{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-radius: 50rpx;
    background: #f5f5f5;
    height: 68rpx;
    width: 710rpx;
    color: #999;
    font-size: 28rpx;
}
.head-img{
    height: 27rpx;
    width: 27rpx;
    margin: 0rpx 20rpx;
}
v-carousel{
    background: #fff;
    width: 100%;
    margin-top: 102rpx;
}
.skip{
    display: flex;
    background: #fff;
    width:100%;
    margin:0rpx 0rpx;
    justify-content: center;
    margin-top: 20rpx;
}
.skip .box{
    width:50%;
    padding:10rpx 10rpx;
}
.skip .box image{
    width:90rpx;
    height:90rpx;
    display:block;
    margin:0 auto;    
}
.skip .box text{
    font-size:27rpx;
    text-align:center;
    display:block;
    line-height:40rpx;
    margin-top:15rpx;      
}
.course-content{
    width: 100%;
    display: flex;
    flex-direction: column;
}
v-videobox{
    margin-top: 15rpx;
}