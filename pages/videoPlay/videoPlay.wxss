/* pages/videos/videos.wxss */
page{
    background: #f5f5f5;
}
.video-box{
    width: 100%;
    background: #fff;
    padding-bottom: 30rpx;
}
.videoPlay{
    width: 100%;
}
.video-tit{
    display: flex;
    width: 100%;
    padding: 0rpx 20rpx;
    box-sizing: border-box;
}
.video-tit .title{
    flex: 1;
    font-size: 34rpx;
    color: #333;
    line-height: 80rpx;
}
.video-tit .num{
    font-size: 26rpx;
    color: #999;
    line-height: 80rpx;
}
.remarks{
    font-size: 30rpx;
    color: #666;
    width: 100%;
    padding: 0rpx 20rpx;
    box-sizing: border-box;
    line-height: 40rpx;
}
.review{
    background: #fff;
    padding-bottom:20rpx;
    width: 100%;
    margin-top: 20rpx;
}
.review .title{
    line-height: 80rpx;
    font-size: 32rpx;
    color: #333;
    padding-left: 20rpx;
}
.review-box{
    padding: 0rpx 20rpx;
    border-bottom: 1rpx solid #eee;
}
.review-box .info{
    display: flex;
}
.review-box .info image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}
.review-box .info text{
    font-size: 30rpx;
    color: #666;
    line-height: 80rpx;
}
.review-box .content{
    line-height: 40rpx;
    font-size: 28rpx;
    color: #333;
}
/* 评论 */
.bottom{
    position: fixed;
    background: #fff;
    height: 100rpx;
    width: 100%;
    border-top: 1rpx solid #f5f5f5;
    border-bottom: 1rpx solid #f5f5f5;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    z-index: 99;
    bottom: 0rpx;
}
.bottom .box{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-radius: 50rpx;
    background: #f5f5f5;
    height: 68rpx;
    width: 710rpx;
    color: #999;
    font-size: 28rpx;
}
.head-img{
    height: 27rpx;
    width: 27rpx;
    margin: 0rpx 20rpx;
}