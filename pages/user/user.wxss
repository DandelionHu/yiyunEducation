/* pages/user/user.wxss */
.userInfo {
    background: #00b38b;
    width: 100%;
    height: 200rpx;
    padding: 30rpx 0rpx;
    display: flex;
    align-items: center;
}
.userInfo .userAvatarUrl {
    display:block;
    overflow:hidden;
    border-radius:50%;
    width:130rpx;
    height:130rpx;
    margin:0rpx 35rpx;
}
.userInfo .center {
    flex: 1;
}
.userInfo .arrow {
    width: 16rpx;
    height: 28rpx;
    margin-right:55rpx;
}
.userInfo text {
    display: block;
    color: #fff;
    font-size: 26rpx;
    line-height: 50rpx;
}
.userInfo .userNickName{
    display:block;
    color:#fff;
    font-size:30rpx;
    line-height:70rpx;
    font-weight:bold;
}
