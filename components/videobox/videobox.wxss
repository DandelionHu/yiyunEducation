/* components/videobox/videobox.wxss */
.videobox{
    display: flex;
    flex-direction: column;
    width: 100%;
    background: #fff;
    padding: 20rpx;
    box-sizing: border-box;
}
.videobox .img-box{
    width: 100%;
    position: relative;
}
.img-bg{
    width: 100%;
}
.player{
    position: absolute;
    top:50%;
    left: 50%;
    margin-left: -60rpx;
    margin-top: -60rpx;
    width: 120rpx;
    height: 120rpx;
}
.videobox .title{
    line-height: 50rpx;
    color: #333;
    padding: 10rpx 0rpx;
    font-size: 30rpx;
}
.videobox  .bottom{

}
.tag{
    background: #00b38b;
    padding: 10rpx;
    display: inline-block;
    color: #fff;
    font-size: 28rpx;
}